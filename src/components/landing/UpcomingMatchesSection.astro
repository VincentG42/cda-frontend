    homeTeam: 'CCSLR St Joseph',
    awayTeam: 'Eagles Basketball',
    date: 'March 16, 2024',
    time: '7:00 PM',
    location: 'St Joseph Sports Complex',
    league: 'Regional Championship',
    category: 'Senior M',
    isHome: true,
  },
  {
    id: 2,
    homeTeam: 'Thunder Bolts',
    awayTeam: 'CCSLR St Joseph',
    date: 'March 23, 2024',
    time: '6:30 PM',
    location: 'Thunder Arena',
    league: 'Regional Championship',
    category: 'Senior M',
    isHome: false,
  },
  {
    id: 3,
    homeTeam: 'CCSLR St Joseph',
    awayTeam: 'City Warriors',
    date: 'March 30, 2024',
    time: '8:00 PM',
