    league: 'Regional Championship',
    category: 'U13F',
    isHome: true,
  },
  {
    id: 4,
    homeTeam: 'Lightning Bolts',
    awayTeam: 'CCSLR St Joseph',
    date: 'April 6, 2024',
    time: '5:00 PM',
    location: 'Lightning Arena',
    league: 'Youth League',
    category: 'U13F',
    isHome: false,
  },
  {
    id: 5,
    homeTeam: 'CCSLR St Joseph',
    awayTeam: 'Phoenix Rising',
    date: 'April 13, 2024',
    time: '7:30 PM',
    location: 'St Joseph Sports Complex',
    league: 'Regional Championship',
    category: 'Senior M',
    isHome: true,
  },
  {
    id: 6,
    homeTeam: 'Storm Chasers',
    awayTeam: 'CCSLR St Joseph',
    date: 'April 20, 2024',
    time: '4:30 PM',
    location: 'Storm Arena',
    league: 'Youth League',
    category: 'U13F',
    isHome: false,
  },
];

const homeMatches = matches.filter(match => match.isHome);
const awayMatches = matches.filter(match => !match.isHome);

const getCategoryColor = (category) => {
  switch (category.toLowerCase()) {
    case 'u13f':
      return 'bg-pink-100 text-pink-800 border-pink-200';
    case 'senior m':
      return 'bg-blue-100 text-blue-800 border-blue-200';
    default:
      return 'bg-gray-100 text-gray-800 border-gray-200';
  }
};
---

<section id="matches" class="py-20 bg-gradient-to-br from-gray-50 to-white min-h-screen" style="background: linear-gradient(90deg, oklch(0.985 0.002 247.839) 0%, rgb(255, 255, 255) 100%)">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4" style="font-family: Lato">Ce week-end</h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto" style="font-family: Lato">Ne ratez pas nos matchs de ce week-end. Venez encourager vos équipes!</p>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <!-- Home Matches Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-gradient-to-br from-primary to-primary-600 rounded-xl flex items-center justify-center mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="m3 9 9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/><polyline points="9 22 9 12 15 12 15 22"/></svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-primary" style="font-family: Lato">Matchs à domicile</h3>
          </div>
        </div>

        <div class="space-y-4">
          {homeMatches.map(match => (
            <div class="bg-gradient-to-r from-primary-50 to-white rounded-xl p-6 border border-primary-100 hover:border-primary-200 transition-all duration-200">
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <span class={`px-3 py-1 rounded-full text-xs font-semibold border ${getCategoryColor(match.category)}`}>
                    {match.category}
                  </span>
                  <span class="text-sm font-medium text-gray-600 bg-gray-100 px-3 py-1 rounded-full">
                    {match.league}
                  </span>
                </div>
              </div>

              <div class="flex items-center justify-between mb-4">
                <div class="text-center flex-1">
                  <div class="w-8 h-8 bg-secondary rounded-full flex items-center justify-center">
                    <span class="text-white font-bold text-sm">VS</span>
                  </div>
                </div>
                
                <div class="text-center flex-1">
                  <h4 class="text-lg font-bold text-gray-700" style="font-family: Lato">
                    {match.awayTeam}
                  </h4>
                  <p class="text-sm text-gray-500" style="font-family: Lato">Away</p>
                </div>
              </div>

              <div class="grid grid-cols-2 gap-4 text-sm">
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 text-primary">
                  <span class="text-gray-700" style="font-family: Lato">{match.date}</span>
                </div>
                <div class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 text-primary"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
                  <span class="text-gray-700" style="font-family: Lato">{match.time}</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Away Matches Card -->
      <div class="bg-white rounded-2xl shadow-xl p-8 border border-gray-100 hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-6">
          <div class="w-12 h-12 bg-gradient-to-br from-secondary to-secondary-600 rounded-xl flex items-center justify-center mr-4">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-white"><path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2"/><path d="m2.2 2.2 19.6 19.6"/></svg>
          </div>
          <div>
            <h3 class="text-2xl font-bold text-secondary" style="font-family: Lato">Matchs extérieurs</h3>
          </div>
        </div>

        <div class="space-y-4">
          {awayMatches.map(match => (
            <div class="bg-gradient-to-r from-secondary/20 to-white rounded-xl p-6 border border-secondary-100 hover:border-secondary-200 transition-all duration-200">
              <div class="flex items-start justify-between mb-4">
                <div class="flex items-center space-x-3">
                  <span class={`px-3 py-1 rounded-full text-xs font-semibold border ${getCategoryColor(match.category)}`} style="font-family: Lato">
                    {match.category}
                  </span>
                  <span class="text-sm font-medium text-gray-600 bg-gray-100 px-3 py-1 rounded-full" style="font-family: Lato">
                    {match.league}
                  </span>
                </div>
              </div>

              <div class="flex items-center justify-between mb-4">
                <div class="text-center flex-1">
                  <h4 class="text-lg font-bold text-gray-700" style="font-family: Lato">
                    {match.homeTeam}
                  </h4>
                  <p class="text-sm text-gray-500" style="font-family: Lato">Home</p>
                </div>
                
                <div class="mx-4 flex items-center">
                  <div class="w-8 h-8 bg-secondary rounded-full flex items-center justify-center">
                    <span class="text-white font-bold text-sm">VS</span>
                  </div>
                </div>
                
                <div class="text-center flex-1">
                  <h4 class="text-lg font-bold text-primary" style="font-family: Lato">
                    {match.awayTeam}
                  </h4>
                  <p class="text-sm text-gray-500">Away</p>
                </div>
              </div>

              <div class="flex" style="display: flex">
                <div class="flex items-center" style="width: 238px; max-width: 238px">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 text-secondary"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
                  <span class="text-gray-700" style="font-family: Lato">{match.date}</span>
                </div>
                <div class="flex items-center" style="width: 238px; max-width: 238px">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2 text-secondary"><circle cx="12" cy="12" r="10"/><path d="M12 6v6l4 2"/></svg>
                  <span class="text-gray-700" style="font-family: Lato">{match.time}</span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
