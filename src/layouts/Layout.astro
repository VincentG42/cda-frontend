---
export interface Props {
	title: string;
}

const { title } = Astro.props;

const hexToRgb = (hex) => {
  let r = 0, g = 0, b = 0;
  // Handle #RRGGBB
  if (hex.length === 7) {
    r = parseInt(hex.substring(1, 3), 16);
    g = parseInt(hex.substring(3, 5), 16);
    b = parseInt(hex.substring(5, 7), 16);
  }
  return `${r} ${g} ${b}`;
};

const neutralPrimaryColorRgb = hexToRgb('#374151');
const neutralAccentColorRgb = hexToRgb('#F9FAFB');
